<h1>Your Shopping Cart</h1>

<% if @cart.contents.empty? %>
  <p>Your cart is empty</p>
<% else %>
  Total: <%= number_to_currency(@cart.grand_total) %>
  Price with coupon: <%= number_to_currency(@reduced_item.final_price(@coupon)) %>

  <%= button_to "Empty cart", cart_empty_path, method: :delete %>

  <% if current_user %>
    <%= button_to 'Check out', profile_orders_path(@coupon) %>
  <% else %>
    You must
    <%= link_to 'register', registration_path %>
    or
    <%= link_to 'log in', login_path %>
    to check out.
  <% end %>

  <% @items.each do |item| %>
    <%= tag.div id: "item-#{item.id}" do %>
      <%= render partial: "./cart/cart_item", locals: {item: item, img_width: 150} %>
    <% end %>
  <% end %>
<% end %>
