<h3>Items for Sale</h3>

<% if current_admin? %>
<%= link_to 'Add new Item', new_admin_merchant_item_path(@merchant) %>
<% else %>
<%= link_to 'Add new Item', new_dashboard_item_path %>
<% end %>

<% @items.each do |item| %>
  <%= tag.div id: "item-#{item.id}" do %>
  <%= link_to "Add a new coupon for this item", dashboard_new_coupon_path(item) %>
  <%= render partial: "/merchants/items/item_card", locals: {item: item, img_width: 200} %>
  <% end %>
<% end %>
